<div id="page_wrapper">
  <h1>New Post</h1>
  
  <%= form_for(@post) do |f| %>
    <% if @post.errors.any? %>
    <div id="errors">
      <h2>Your post contains <%= pluralize(@post.errors.count, "error") %>.</h2>
      <ul>
        <% @post.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>
    
    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </p>
    
    <p>
      <%= f.submit %>
    </p>
    
  <% end %>
</div>